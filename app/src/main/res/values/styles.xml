<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ClemsonPurple</item>
        <item name="colorPrimaryDark">@color/ClemsonPurple</item>
        <item name="colorAccent">@color/ClemsonPurple</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ClemsonPurple</item>
        <item name="actionBarSize">90dp</item>
        <item name="colorPrimaryDark">@color/ClemsonPurple</item>
        <item name="colorAccent">@color/ClemsonPurple</item>
    </style>

    <style name="CustomThemePage" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/ClemsonPurple</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
