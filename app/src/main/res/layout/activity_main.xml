<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ngratzi.nicecatchtiger.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#7800c9"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nice Catch Tiger!"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textAllCaps="false"
        android:textColor="#2a0051"
        android:id="@+id/button3"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="25dp"
        android:onClick="startInfo"
        android:layout_below="@+id/button"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report a Nice Catch"
        android:textColor="#2a0051"
        android:id="@+id/button"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:onClick="startReport"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="320dp"
        android:id="@+id/imageView"
        android:src="@drawable/title"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
